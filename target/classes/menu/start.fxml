<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="goalrush.SceneController">
   <center>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#switchToGameOptions" prefHeight="30.0" prefWidth="200.0" text="Play" />
            <Button mnemonicParsing="false" onAction="#switchToHelp" prefHeight="30.0" prefWidth="200.0" text="Control">
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#handleCloseButtonAction" prefHeight="30.0" prefWidth="200.0" text="Exit" />
         </children>
         <BorderPane.margin>
            <Insets top="30.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <bottom>
      <Text fill="#301f1f" strokeType="OUTSIDE" strokeWidth="0.0" text="Football is not just a game, it's a way of life." BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="20.0" top="20.0" />
         </BorderPane.margin>
         <font>
            <Font size="23.0" />
         </font>
      </Text>
   </bottom>
   <top>
      <ImageView fitHeight="348.0" fitWidth="395.0" BorderPane.alignment="CENTER">
         <image>
            <Image url="@../logo/biba_white_shadow_transparent.png" />
         </image>
      </ImageView>
   </top>
</BorderPane>
